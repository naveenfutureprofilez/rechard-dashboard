				.device
					.device__chart
						div(id="top-device")
					.device__legend
						.device__indicator.device__indicator_mobile
							+i('mobile')
							.device__title Mobile
							.device__percent 20%
						.device__indicator.device__indicator_tablet
							+i('tablet')
							.device__title Tablet
							.device__percent 5%
						.device__indicator.device__indicator_desktop
